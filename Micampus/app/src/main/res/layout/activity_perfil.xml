<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.PerfilActivity">

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:fontFamily="@font/helveticaneuelight"/>
    <ImageView
        android:id="@+id/imagenperfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:orientation="vertical"
        android:gravity="center"
        android:src="@drawable/f_perfil" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp">

    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Row"
        android:gravity="center"
        android:textSize="26dp"
        android:textColor="#1f1f1f"
        android:fontFamily="@font/helveticaneubold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrera:"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helveticaneuelight"/>

    <TextView
        android:id="@+id/tv_txt_carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="16dp"
        android:fontFamily="@font/helveticaneuelight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semestre:"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helveticaneuelight"/>

    <TextView
        android:id="@+id/tv_txt_semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="16dp"
        android:fontFamily="@font/helveticaneuelight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materias aprobadas:"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helveticaneuelight"/>

    <TextView
        android:id="@+id/tv_txt_materiasaprobadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="16dp"
        android:fontFamily="@font/helveticaneuelight"/>

    <TextView
        android:id="@+id/btn_tutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más Información"
        android:layout_marginTop="40dp"
        android:textColor="#4481be"
        android:fontFamily="@font/helveticaneubold"/>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>