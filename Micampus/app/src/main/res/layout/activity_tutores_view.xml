<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_tutor_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.TutoresViewActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/helveticaneubold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Información"
            android:textColor="#ffff"
            android:textSize="26sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Padre"
                android:textColor="#000000"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_txt_nombret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Row"
                android:textSize="12sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="13dp"
                android:background="#fbce07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Teléfono:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Trabajo:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_trabajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Correo:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Dirección:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Madre"
                android:textColor="#000000"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_txt_nombretm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Row"
                android:textSize="12sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="13dp"
                android:background="#fbce07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Teléfono:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_telefonom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Trabajo:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_trabajom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Correo:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_correom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Dirección:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_txt_direccionm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:text="Row"
                android:textSize="16sp" />
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>