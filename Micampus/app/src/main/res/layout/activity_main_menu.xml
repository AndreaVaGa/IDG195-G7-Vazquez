<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainMenuActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Académico:"
        android:textStyle="bold"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

    <Button
        android:id="@+id/btn_boleta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#0EA330"
        android:text="A"
        android:textSize="30dp"
        android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24dp" />
    <Button
        android:id="@+id/btn_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#0EA563"
        android:text="P"
        android:textSize="30dp"
        android:layout_margin="10dp"/>

        <Button
        android:id="@+id/btn_horario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#0EA563"
        android:text="H"
        android:textSize="30dp"
        android:layout_margin="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financiero:"
        android:textStyle="bold"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/btn_adeudos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0EA330"
            android:text="A"
            android:textSize="30dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24dp" />
        <Button
            android:id="@+id/btn_historial"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0EA563"
            android:text="P"
            android:textSize="30dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_tramites"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0EA563"
            android:text="H"
            android:textSize="30dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaluaciones:"
        android:textStyle="bold"
        android:textSize="30dp" />

</android.support.v7.widget.LinearLayoutCompat>

